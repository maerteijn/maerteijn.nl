{
  "name": "src",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve --port 1234",
    "build:sitemap": " node src/sitemap/index.js",
    "build": "VUE_APP_BUILD_TIME=$(TZ=Europe/Amsterdam date) vue-cli-service build --dest dist/release && npm run build:sitemap",
    "eslint": "eslint src/",
    "eslint:fix": "eslint src/ --fix",
    "stylelint": "stylelint 'src/**/*.scss' 'src/**/*.vue'",
    "stylelint:fix": "stylelint 'src/**/*.scss' 'src/**/*.vue' --fix",
    "prettier": "prettier --check \"{tests,src}/**/*.{js,vue}\"",
    "prettier:fix": "prettier --write \"{tests,src}/**/*.{js,vue}\"",
    "test:unit": "vue-cli-service test:unit --require tests/setup_dom.js --colors tests/unit/",
    "test:unit:debug": "vue-cli-service test:unit --inspect-brk --require tests/setup_dom.js --colors tests/unit/",
    "test:functional": "vue-cli-service test:unit --require tests/setup_dom.js --colors tests/functional/",
    "test:e2e": "npm run build && mocha --exit tests/e2e/test_*.js",
    "ui": "vue ui"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "ajv": "^6.12.5",
    "axios": "^0.21.1",
    "bulma": "^0.9.3",
    "core-js": "^3.16.0",
    "showdown": "^1.9.1",
    "viewerjs": "^1.10.0",
    "vue": "^3.2.1",
    "vue-router": "^4.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-object-assign": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@vue/cli-plugin-babel": "^4.5.14",
    "@vue/cli-plugin-router": "^4.5.14",
    "@vue/cli-plugin-unit-mocha": "^4.5.14",
    "@vue/cli-service": "^4.5.14",
    "@vue/cli":  "^4.5.14",
    "@vue/compiler-sfc": "^3.2.1",
    "@vue/component-compiler-utils": "^3.2.2",
    "@vue/test-utils": "^2.0.0-rc.12",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.15.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "jsdom": "^16.7.0",
    "jsdom-global": "^3.0.2",
    "mocha": "~7",
    "null-loader": "^4.0.1",
    "playwright-chromium": "^1.13.1",
    "prettier": "^2.3.2",
    "regenerator-runtime": "^0.13.9",
    "sass": "^1.37.0",
    "sass-loader": "^10.2.0",
    "sinon": "^9.2.4",
    "sitemap": "^6.4.0",
    "style-resources-loader": "^1.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "vue-cli-plugin-style-resources-loader": "^0.1.5",
    "vue-hot-reload-api": "^2.3.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "esm": {
    "cache": false
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "max-nesting-depth": 4,
      "selector-max-compound-selectors": 4,
      "string-quotes": "double",
      "scss/at-import-no-partial-leading-underscore": null,
      "function-parentheses-space-inside": "never-single-line",
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [
            "attribute",
            "class"
          ]
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "vueIndentScriptAndStyle": false
  },
  "mocha": {
    "require": [
      "esm"
    ],
    "recursive": true
  },
  "nyc": {
    "cache": false,
    "all": true,
    "extension": [
      ".js",
      ".vue"
    ],
    "exclude": [
      ".**js",
      "tests/**",
      "dist/dev/**",
      "dist/e2e/**"
    ]
  },
  "sitemap_settings": {
    "site_json": "content/site.json",
    "hostname": "https://www.maerteijn.nl",
    "base_language": "nl",
    "translated_language": "en"
  }
}
