{
  "name": "maerteijn.nl",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve --port 1234",
    "build": "VUE_APP_BUILD_TIME=$(TZ=Europe/Amsterdam date) vue-cli-service build --dest dist/release && npm run build:sitemap",
    "test:unit": "vue-cli-service test:unit --require tests/setup_dom.js --colors tests/unit/",
    "test:e2e": "npm run build && mocha --exit tests/e2e/test_*.mjs",
    "lint": "vue-cli-service lint",
    "build:sitemap": "node src/sitemap/index.mjs",
    "eslint": " vue-cli-service lint --no-fix src/",
    "eslint:fix": " vue-cli-service lint src/ ",
    "prettier": "prettier --check \"{tests,src}/**/*.{js,vue}\"",
    "prettier:fix": "prettier --write \"{tests,src}/**/*.{js,vue}\"",
    "stylelint": "stylelint 'src/**/*.scss' 'src/**/*.vue'",
    "stylelint:fix": "stylelint 'src/**/*.scss' 'src/**/*.vue' --fix",
    "test:functional": "vue-cli-service test:unit --require tests/setup_dom.js --colors tests/functional/",
    "test:unit:debug": "vue-cli-service test:unit --inspect-brk --require tests/setup_dom.js --colors tests/unit/",
    "ui": "vue ui"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.3",
    "@fortawesome/free-brands-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "bulma": "^0.9.3",
    "core-js": "^3.21.1",
    "showdown": "^2.0.3",
    "viewerjs": "^1.10.4",
    "vue": "^3.2.31",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli": "^5.0.0-rc.2",
    "@vue/cli-plugin-babel": "^5.0.0-rc.2",
    "@vue/cli-plugin-eslint": "^5.0.0-rc.2",
    "@vue/cli-plugin-router": "^5.0.0-rc.2",
    "@vue/cli-plugin-unit-mocha": "^5.0.0-rc.2",
    "@vue/cli-service": "^5.0.0-rc.2",
    "@vue/test-utils": "2.0.0-rc.17",
    "chai": "^4.3.4",
    "eslint": "^8.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.0.3",
    "express": "^4.17.1",
    "jsdom": "^19.0.0",
    "global-jsdom": "^8.4",
    "null-loader": "^4.0.1",
    "playwright-chromium": "^1.13.1",
    "prettier": "^2.4.1",
    "regenerator-runtime": "^0.13.9",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "sinon": "^9.2.4",
    "sitemap": "^6.4.0",
    "style-resources-loader": "^1.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "vue-cli-plugin-style-resources-loader": "^0.1.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "mocha": true,
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "vue/multi-word-component-names": "off"
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "prettier": {
    "semi": false,
    "vueIndentScriptAndStyle": false
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "nyc": {
    "cache": false,
    "all": true,
    "extension": [
      ".js",
      ".vue"
    ],
    "exclude": [
      ".**js",
      "tests/**",
      "dist/dev/**",
      "dist/e2e/**"
    ]
  },
  "sitemap_settings": {
    "site_json": "content/site.json",
    "hostname": "https://www.maerteijn.nl",
    "base_language": "nl",
    "translated_language": "en"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "max-nesting-depth": 4,
      "selector-max-compound-selectors": 4,
      "string-quotes": "double",
      "value-no-vendor-prefix": null,
      "media-feature-name-no-vendor-prefix": null,
      "scss/at-import-no-partial-leading-underscore": null,
      "function-parentheses-space-inside": "never-single-line",
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [
            "attribute",
            "class"
          ]
        }
      ]
    }
  }
}
