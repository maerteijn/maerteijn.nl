{
  "name": "maerteijn.nl",
  "version": "1.0.0",
  "description": "My professional website build with vue.js and bulma",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "parcel --hmr-port 3000 src/index.html",
    "eslint": "eslint src/",
    "eslint:fix": "eslint src/ --fix",
    "stylelint": "stylelint 'src/**/*.scss' 'src/**/*.vue'",
    "stylelint:fix": "stylelint 'src/**/*.scss' 'src/**/*.vue' --fix",
    "build": "parcel build main.js src/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maerteijn/maerteijn.github.io.git"
  },
  "keywords": [],
  "author": "Martijn Jacobs",
  "license": "SEE LICENSE IN LICENS",
  "homepage": "https://github.com/maerteijn/maerteijn.github.io",
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.1.2",
    "bulma": "^0.8.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "sass": "^1.26.5",
    "stylelint": "^13.3.3",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "vue-hot-reload-api": "^2.3.4",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.common.js"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "string-quotes": "double",
      "scss/at-import-no-partial-leading-underscore": null
    }
  }
}
